{
	"name": "nitsan/ns-friendlycaptcha",
	"type": "typo3-cms-extension",
	"description": "Easy on Humans, Hard on Bots",
	"homepage": "https://extensions.typo3.org/extension/ns_friendlycaptcha/",

	"license": "GPL-2.0-or-later",

	"support": {
		"issues": "https://github.com/nitsan-technologies/ns_friendlycaptcha/issues"
	},

	"keywords": [
		"ns_friendlycaptcha",
		"nocaptcha 2",
		"invisible captcha"
	],

	"require": {
		"typo3/cms-core": "^11.0",
		"typo3/cms-extbase": "*",
		"typo3/cms-fluid": "*",
		"typo3/cms-frontend": "*"
	},
	"suggest": {
		"typo3/cms-form": "*"
	},

	"autoload": {
		"psr-4": {
			"NITSAN\\NsFriendlycaptcha\\": "Classes/"
		}
	},

	"config": {
		"vendor-dir": ".Build/Web/vendor",
		"allow-plugins": {
			"typo3/cms-composer-installers": true,
			"typo3/class-alias-loader": true
		}
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "ns_friendlycaptcha",
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web"
		}
	},

	"scripts": {
		"post-autoload-dump": "mkdir -p .Build/Web/typo3conf/ext/ && ln -snf ../../../.. .Build/Web/typo3conf/ext/ns_friendlycaptcha",
		"prepare-release": [
			"rm -rf .Build",
			"rm -rf .github",
			"rm .gitignore",
			"sed -i \"s/version' => '.*'/version' => '$(echo ${GITHUB_REF} | cut -d / -f 3)'/\" ext_emconf.php\n"
		]
	}
}
